{
  "constants": {
    "TEXT_VIEW_SIZE": [200, 150, 1]
  },
  "animations": {
    "blur": {
      "duration": 1,
      "properties": [{
        "actor": "superBlur",
        "property": "blurStrength",
        "value": 1,
        "timePeriod": {
          "delay": 0,
          "duration": 1
        }
      }]
    },
    "clear": {
      "duration": 1,
      "properties": [{
        "actor": "superBlur",
        "property": "blurStrength",
        "value": 0,
        "timePeriod": {
          "delay": 0,
          "duration": 1
        }
      }]
    }
  },
  "stage": [
    // SuperBlurView
    {
      "type": "SuperBlurView",
      "name": "superBlur",
      "parentOrigin": "TOP_CENTER",
      "anchorPoint": "TOP_CENTER",
      "size": [800, 1280, 0],
      "image": {
        "filename": "{DEMO_IMAGE_DIR}background-4.jpg"
      }
    },

    // Button to blur/clear
    {
      "type": "PushButton",
      "name": "toggleButton",
      "parentOrigin": "BOTTOM_CENTER",
      "anchorPoint": "BOTTOM_CENTER",
      "position": [0, 0, 0],
      "size": [200, 100, 0],
      "labelText": "Blur",
      "siblingOrder": 1,
      "signals": [{
        "name": "pressed",
        "action": "play",
        "animation": "blur"
      }, {
        "name": "released",
        "action": "play",
        "animation": "clear"
      }]
    }
  ]
}
